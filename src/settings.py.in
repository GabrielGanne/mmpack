    CFG_HOME = os.environ['XDG_CONFIG_HOME']
except KeyError:
    CFG_HOME = os.environ['HOME'] + '/.config'

CONFIG_PATH = CFG_HOME + '/mmpack-config.yml'

DPKG_PREFIX = '/var/lib/dpkg'
DPKG_METADATA_PREFIX = DPKG_PREFIX + '/info'

